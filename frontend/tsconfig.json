{
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "eslint.config.mjs",
    "prettier.config.mjs",
    "vite.config.js"
  ],

  "compilerOptions": {
    "target": "ESNext",
    "jsx": "react-jsx",
    "module": "ESNext",
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "types": ["vite/client"],

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "noEmit": true,

    /* Linting */
    "skipLibCheck": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedSideEffectImports": true,
    "baseUrl": ".",
    "paths": {
      "$assets/*": ["./src/assets/*"],
      "$sharedComponents/*": ["./src/sharedComponents/*"],
      "$features/*": ["./src/features/*"],
      "$contexts/*": ["./src/contexts/*"],
      "$models/*": ["./src/models/*"],
      "$hooks/*": ["./src/hooks/*"],
      "$enums/*": ["./src/enums/*"],
      "$lib/*": ["./src/lib/*"],
      "$queries/*": ["./src/queries/*"]
    }
  }
}
